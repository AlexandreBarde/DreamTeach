{% extends 'base.html.twig' %}

{% block title %}Messagerie{% endblock %}

{% block stylesheets %}
    <link href="http://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.11/summernote.css" rel="stylesheet">
    <script src="http://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.11/summernote.js"></script>
{% endblock %}
{%  block javascripts %}
    <script>

           var element = document.getElementById("messageScroll");
           element.scrollTop = element.scrollHeight;

    </script>
{% endblock %}

{% block body %}
    <style>
        /* CSS talk bubble */
        .talk-bubble {
            margin: 40px;
            display: inline-block;
            position: relative;
            width: 500px;
            height: auto;
            background-color: lightgrey;
        }

        .talk-bubble2 {
            margin: 40px;
            display: inline-block;
            position: relative;
            width: 500px;
            height: auto;
            background-color: #6d7fcc;
        }


        .tri-right.left-top:after {
            content: ' ';
            position: absolute;
            width: 0;
            height: 0;
            left: -20px;
            right: auto;
            top: 0px;
            bottom: auto;
            border: 22px solid;
            border-color: lightgrey transparent transparent transparent;
        }

        .tri-right.right-top:after {
            content: ' ';
            position: absolute;
            width: 0;
            height: 0;
            left: auto;
            right: -20px;
            top: 0px;
            bottom: auto;
            border: 20px solid;
            border-color: #6d7fcc transparent transparent transparent;
        }

        .talktext {
            padding: 1em;
            text-align: left;
            line-height: 1.5em;
        }

        .talktext p {
            /* remove webkit p margins */
            -webkit-margin-before: 0em;
            -webkit-margin-after: 0em;
            color: black;
        }

        .talktext2 p {
            /* remove webkit p margins */
            -webkit-margin-before: 0em;
            -webkit-margin-after: 0em;
            color: white;
        }

        .talktext2 {
            padding: 1em;
            text-align: left;
            line-height: 1.5em;
            color: white;
        }

        .espace {
            width: 6%;
        }
    </style>

    <div class="container mt-1 mb-2">
        <h1 class="display-4 text-center">{{ sender.firstname }} {{ sender.lastname }}</h1>
        <hr style="background-color: #6d7fcc;"/>
    </div>
    <div style="overflow-y: auto; height:400px;" id="messageScroll">

        {% for m in messages %}
            {% if m.idSender == app.user %}
                <div class="row">
                    <div class="espace"></div>
                    <div class="col-4 text-right align-self-center">Vous : le {{ m.date|date("d/m/Y") }}
                        a {{ m.date|date("H:i") }}</div>
                    <div class="talk-bubble2 tri-right right-top">
                        <div class="talktext2">
                            <p>{{ m.content }} </p>
                        </div>
                    </div>
                </div>

            {% else %}
                <div class="row">
                    <div class="talk-bubble tri-right left-top">
                        <div class="talktext">
                            <p> {{ m.content }}</p>
                        </div>
                    </div>
                    <div class=" align-self-center"> {{ sender.firstname }} {{ sender.lastname }} :
                        le {{ m.date|date("d/m/Y") }} a {{ m.date|date("H:i") }} </div>
                </div>
            {% endif %}
        {% endfor %}
    </div>
    <hr style="background-color: #6d7fcc;"/>
    <div class="row">
        <div class="col pt-3 pb-3">
            {{ form_start(form) }}
            {{ form_widget(form.content, {"attr" : {"class" : "form-control", "placeholder" : "Votre message...", "required" : ""}}) }}
            <br>
            <input type="submit" value="Envoyer" style="background-color: #6d7fcc; color: white;"
                   class="btn btn-lg btn-block pt-2 pb-2">
            {{ form_end(form) }}
            <!--<textarea class="form-control" id="description" name="description" rows="3"></textarea><br />-->
        </div>
    </div>
{% endblock %}




