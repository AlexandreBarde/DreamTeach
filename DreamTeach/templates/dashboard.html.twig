{% extends 'base.html.twig' %}

{% block title %}
    Dashboard - DreamTeach
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-8">
            <h5>Bonjour {{ app.user.firstname }} !</h5>
            Bienvenue sur votre espace personnel
        </div>
        <div class="col-4 alert alert-success">

        </div>
    </div>
    <div class="row justify-content-between mt-5">
        <div class="col-6 col-sm-2 alert alert-danger text-center"><h6>Séances dirigées</h6>23</div>
        <div class="col-6 col-sm-2 alert alert-warning"></div>
        <div class="col-6 col-sm-2 alert alert-primary"></div>
        <div class="col-6 col-sm-2 alert alert-secondary"></div>
    </div>
    <div class="row">
        <div class="col-6">
            <div class="card">
                <div class="card-header">
                    <h6><i class="fa fa-graduation-cap fa-lg"></i>&nbsp;Prochaines séances</h6>
                </div>
                <div class="card-body">

                </div>
            </div>
        </div>
        <div class="col-6">
            <div class="card">
                <div class="card-header">
                    <h6><i class="far fa-envelope fa-lg"></i>&nbsp; Messages récents</h6>
                </div>
                <div class="card-body"></div>
            </div>
        </div>

        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h6><i class="far fa-envelope fa-lg"></i>&nbsp; Séances à venir</h6>
                </div>
                <div class="row">
                    {% for i in session%}
                        <div class="col-2">
                            <span> {{ i.id() }} </span>
                        </div>
                        <div class="col-5">
                            <span> Nom : {{ i.name() }} </span>
                            <br/>
                            <span> Date : {{ i.date.format('d-m-Y') }} </span>
                            <br/>
                            <span> Heure : {{ i.startingTime.format('H:i') }} </span>
                        </div>
                        <div class="col-5">
                            <span> Description : {{ i.description() }} </span>
                        </div>
                    {% endfor %}
                </div>
                <div class="card-body"></div>
            </div>
        </div>
    </div>
{% endblock %}



