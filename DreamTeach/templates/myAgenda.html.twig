{% extends 'base.html.twig' %}

{% block title %}Mon agenda{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/register.css') }}">{% endblock %}

{% block body %}
    <div class="container mt-5">
        {% for flash in app.flashes %}
            {{ flash }}
        {% endfor %}
        <h1 class="display-4 text-center">Vos séances</h1>
        {% if user.getSessionid()|length > 0 %}
        <table class="table table-hover">
            <thead>
            <tr>
                <th scope="col">Nom</th>
                <th scope="col">Date</th>
                <th scope="col">Heure</th>
                <th scope="col">Description</th>
                <th></th>
                <th></th>
                <th></th>


            </tr>
            </thead>
            <tbody>
            {% for i in user.getSessionid() %}
                {% if i.closed %}
                    <tr class="table-active">
                {% else %}
                    <tr>
                {% endif %}
                <td><u><a href="{{ path('displaySession', {"idSession" : i.id()}) }}">{{ i.name() }}</a></u></td>
                <td>{{ i.date.format('d-m-Y') }}</td>
                <td>{{ i.startingTime.format('H:i') }}</td>
                <td>{{ i.description()|slice(0, 50) }}{% if i.description()|length > 50 %}....{% endif %}</td>

                {% if app.user.id==i.organizerId.id %}
                    {% if i.closed %}
                        <td><a href="#" class="btn btn-primary btn-sm disabled"><i class="fas fa-edit"></i> Modifier</a>
                        </td>
                        <td><a href="#" class="btn btn-primary btn-sm disabled"><i class="fas fa-trash-alt"></i>Supprimer</a>
                        </td>
                    {% else %}
                        <td><a href="{{ path('updateSession', {"idSession" : i.id()}) }}"
                               class="btn btn-primary btn-sm"><i class="fas fa-edit"></i> Modifier</a></td>
                        <td><a href="{{ path('deleteSession', {"idSession" : i.id()}) }}"
                               class="btn btn-primary btn-sm"><i class="fas fa-trash-alt"></i>Supprimer</a></td>
                    {% endif %}
                {% else %}
                    <td></td>
                    <td></td>
                {% endif %}


                {% if app.user.id==i.organizerId.id %}
                    {% if i.closed %}
                        <td><a href="#" class="btn btn-danger btn-sm disabled"><i class="fas fa-door-closed"></i></i>
                                Clôturer</a>
                        </td>
                    {% else %}
                        <td><a href="{{ path('CloseSession', {"idSession" : i.id()}) }}"
                               class="btn btn-danger btn-sm"><i class="fas fa-door-closed"></i></i> Clôturer</a>
                        </td>
                    {% endif %}
                {% else %}
                    {% if i.closed %}
                        <td><a href="#" class="btn btn-danger btn-sm disabled"><i class="fas fa-times"></i> Se
                                désinscrire</a>
                        </td>
                    {% else %}
                        <td><a href="{{ path('RemoveSession', {"idSession" : i.id()}) }}"
                               class="btn btn-danger btn-sm"><i class="fas fa-times"></i> Se désinscrire</a>
                        </td>
                    {% endif %}
                {% endif %}
                </tr>
            {% endfor %}
            </tbody>
        </table>
        {% else %}
            <div class="container pt-4">
                <div class="alert alert-danger" role="alert">
                    Aucune séance disponible !
                </div>
            </div>
        {% endif %}
    </div>
{% endblock %}


