{% extends "base.disconnect.html.twig" %}

{% block stylesheets %}<link rel="stylesheet" href="{{ asset('css/custom.css') }}">{% endblock %}

{% block title %}Réinitialisation du mot de passe{% endblock %}

{% block body %}
    <div class="container" id="card">
        <div class="card">
            <div class="card-header">
                <h1>Réinitialisation du mot de passe</h1>
            </div>
            {{ form_start(form) }}
            <div class="card-body">
                <div class="form-group">
                    {{ form_row(form.password.first) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.password.second) }}
                </div>
                <button type="submit" class="btn btn-primary btn-block btn-lg">Changer le mot de passe</button>
                {{ form_end(form) }}
                {% for flash in app.flashes('success') %}
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        {{ flash }}
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}

