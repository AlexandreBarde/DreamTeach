{% extends 'base.html.twig' %}

{% block title %}Qcms{% endblock %}

{% block body %}
    {{ form_start(formCreateQcm) }}
        {{ form_widget(formCreateQcm.title) }}
        {{ form_widget(formCreateQcm.deadline) }}
        {{ form_widget(formCreateQcm.visible) }}
        <div id="questions" data-prototype="{{ form_widget(formCreateQcm.questions.vars.prototype.content)|e('html_attr') }}">
        </div>
        <div id="responses" style="max-width: 200px"
             data-prototype="{{ form_widget(formCreateQcm.questions.vars.prototype.responses.vars.prototype.content)|e('html_attr') }}"
             data-prototype2="{{ form_widget(formCreateQcm.questions.vars.prototype.responses.vars.prototype.rightanswer)|e('html_attr') }}">
        </div>

        <input type="submit" value="Enregistrer" class="btn btn-primary btn-lg btn-block">
    {{ form_end(formCreateQcm) }}
{% endblock %}

{% block javascripts %}
    <script>
        $(document).ready(function () {
            var btnAddQuestion = $('<a href="#" class="btn btn-success">Ajout Question</a>');
            var $newLinkLi = $('<li></li>').append(btnAddQuestion);

            // Get the ul that holds the collection of tags
            var $collectionHolder = $('div#questions');

            // add the "add a tag" anchor and li to the tags ul
            $collectionHolder.append($newLinkLi);

            // count the current form inputs we have (e.g. 2), use that as the new
            // index when inserting a new item (e.g. 2)
            $collectionHolder.data('index', $collectionHolder.find(':input').length);
            // $collectionHolder2.data('index', $collectionHolder2.find('div').length);

            btnAddQuestion.on('click', function (e) {
                // prevent the link from creating a "#" on the URL
                e.preventDefault();

                // add a new tag form (see code block below)
                addQuestionForm($collectionHolder, $newLinkLi);
            });
        });


        function addQuestionForm($collectionHolder, $newLinkLi) {
            var btnAddResponse = $('<a href="#" class="btn btn-primary">Ajouter une r√©ponse</a>');
            var responsesCollection = $('div#responses');
            var newLinkLi = $('<li></li>');

            // Get the data-prototype explained earlier
            var prototype = $collectionHolder.data('prototype');

            // get the new index
            var index = $collectionHolder.data('index');

            // Replace '$$name$$' in the prototype's HTML to
            // instead be a number based on how many items we have
            var newForm = prototype.replace(/__name__/g, index);

            // increase the index with one for the next item
            $collectionHolder.data('index', index + 1);

            // Display the form in the page in an li, before the "Add a tag" link li
            var $newFormLi = $('<li></li>').append(newForm);

            // also add a remove button, just for this example
            $newFormLi.append('<a href="#" class="remove-tag">x</a>');
            $newFormLi.append(btnAddResponse);

            $('#questions').before($newFormLi);

            responsesCollection.data('index', responsesCollection.find(':input').length);

            btnAddResponse.on('click', function(e){
               e.preventDefault();
               addResponseForm(responsesCollection, newLinkLi);
            });

            // handle the removal, just for this example
            $('.remove-tag').click(function (e) {
                e.preventDefault();
                $(this).parent().remove();
                return false;
            });
        }

        function addResponseForm($collectionHolder, $newLinkLi) {
            // Get the data-prototype explained earlier
            var prototype = $collectionHolder.data('prototype');

            // get the new index
            var index = $collectionHolder.data('index');

            // Replace '$$name$$' in the prototype's HTML to
            // instead be a number based on how many items we have
            var newForm = prototype.replace(/__name__/g, index);

            // increase the index with one for the next item
            $collectionHolder.data('index', index + 1);

            // Display the form in the page in an li, before the "Add a tag" link li
            var $newFormLi = $('<li></li>').append(newForm);

            // also add a remove button, just for this example
            $newFormLi.append('<a href="#" class="remove-tag">x</a>');

            $('#responses').append($newFormLi);

            // handle the removal, just for this example
            $('.remove-tag').click(function (e) {
                e.preventDefault();

                $(this).parent().remove();

                return false;
            });
        }
    </script>
{% endblock %}


