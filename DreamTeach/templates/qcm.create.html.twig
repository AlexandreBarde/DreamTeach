{% extends 'base.html.twig' %}

{% block title %}Qcms{% endblock %}

{% block body %}
    <h1>HI</h1>
    {{ form_start(formCreateQcm) }}
        {{ form_widget(formCreateQcm.title) }}
        {{ form_widget(formCreateQcm.deadline) }}
        {{ form_widget(formCreateQcm.visible) }}
    <ul class="questions" data-prototype="{{ form_widget(formCreateQcm.questions.vars.prototype)|e('html_attr')}}">
        {{ form_widget(formCreateQcm.questions.vars.prototype.content) }}
    {% for question in formCreateQcm.questions %}
        <li>{{ form_row(question.vars.prototype.content) }}</li>
    {% endfor %}
    </ul>
        {{ form_widget(formCreateQcm.questions) }}
        <input type="submit" value="Enregistrer" class="btn btn-primary btn-lg btn-block">
    {{ form_end(formCreateQcm) }}
{% endblock %}

