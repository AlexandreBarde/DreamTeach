{% extends "base.html.twig" %}
{% block title %}Rejoindre une séance - DreamTeach{% endblock %}

{% block body %}

<div class="container-fluid">
    {% for flash in app.flashes %}
        {{ flash }}
    {% endfor %}
    <div class="card">
        <div class="card-header" style="background-color: rgba(0,0,0,.00);">
            <h2>Rejoindre une séance privée</h2>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-sm">
                    <div class="form-row">
                        <div class="col">
                            <label for="inputEmail4">Mot de passe de la séance </label>
                            {{ form_start(form) }}
                            {{ form_widget(form.password) }}
                            {{ form_end(form) }}
                        </div>
                    </div>
                    <br>
                    <label for="exampleFormControlTextarea1">Description de la séance : </label><br />
                    {{ session.description }}
                </div>
            </div>
        </div>
    </div>
    <br/>

{% endblock %}