{% extends 'base.html.twig' %}

{% block title %}
    Séances - DreamTeach
{% endblock %}

{% block body %}
    <div class="container mt-5">
        <form action="{{ path('search_session') }}" method="get" id="search_session">
            <div class="form-group">
                <div class="card">
                    <div class="card-body">
                        <input type="date" class="form-control" data-date-format="mm/dd/yyyy">
                        <div class="row">
                            <div class="col-8">
                                <input type="text" id="rechercherInput" class="form-control"
                                       placeholder="Recherchez une séance.."
                                       name="search_student">
                            </div>
                            <div class="col-4">
                                <input type="submit" id="rechercherBtn" value="Rechercher" class="btn btn-block"
                                       style="background-color: #6d7fcc; color: white;">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        <h1 class="display-4 text-center">Séances</h1>
        <div class="row">
        </div>

        <h5><i class="fas fa-crown"></i> Je suis le créateur</h5>


        <div class="row">
            <table class="table table-hover">
                <thead>
                <tr>
                    <th scope="col">Nom</th>
                    <th scope="col">Date</th>
                    <th scope="col">Heure</th>
                    <th scope="col">Description</th>
                    <th scope="col">Organisateur</th>
                    <th></th>
                    <th></th>
                </tr>
                </thead>



                <tbody>
                {% for i in sessionWhereStudentCreator if i.organizerId.id==app.user.id %}
                    {% if i.closed %}
                        <tr class="table-active">
                    {% else %}
                        <tr>
                    {% endif %}
                    <td>
                        <u>
                            {% if i.password %}
                                <a href="{{ path('displaySession', {"session" : i.id()}) }}"><i class="fas fa-key"></i> {{ i.name() }}</a>
                            {%  else %}
                                <a href="{{ path('displaySession', {"session" : i.id()}) }}">{{ i.name() }}</a>
                            {% endif %}
                        </u>
                    </td>
                    <td>{{ i.date.format('d-m-Y') }}</td>
                    <td>{{ i.startingTime.format('H:i') }}</td>
                    <td>{{ i.description()|slice(0, 50) }}{% if i.description()|length > 50 %}....{% endif %}</td>
                    <td>{{ i.organizerid.lastname()~" "~i.organizerid.firstname() }}</td>
                    {% if i.closed %}

                        <td><a href="#" class="btn btn-sm btn-danger disabled"><i
                                        class="fas fa-door-closed"></i>
                                Clôturé</td>
                        <td><a href="#" class="btn btn-sm btn-danger disabled"><i
                                        class="fas fa-door-closed"></i>
                                Transfert admin</td>

                    {% else %}
                        <td><a href="{{ path('CloseSession', {"idSession" : i.id()}) }}"
                               class="btn btn-sm btn-danger"> <i class="fas fa-door-closed"></i> Clôturer</td>
                        <td><a href="{{ path('transferRights', {"session" : i.id()}) }}"
                               class="btn btn-sm btn-danger"><i class="fas fa-door-closed"></i> Transfert admin</td>


                    {% endif %}
                    </tr>
                {% endfor %}
                </tbody>
            </table>

        </div>

        <h5><i class="fas fa-book-reader"></i>&nbsp; Disponibles sur le site</h5>
                <div class="row">
                    <table class="table table-hover">
                        <thead>
                        <tr>
                            <th scope="col">Nom</th>
                            <th scope="col">Date</th>
                            <th scope="col">Heure</th>
                            <th scope="col">Description</th>
                            <th scope="col">Organisateur</th>
                            <th></th>
                            <th></th>

                        </tr>
                        </thead>



                            <tbody>
                            {% for i in sessionToCome if i.organizerId.id!=app.user.id %}
                                {% if i.closed %}
                                    <tr class="table-active">
                                {% else %}
                                    <tr>
                                {% endif %}
                                <td><u>
                                        {% if i.password %}
                                            <a href="{{ path('displaySession', {"session" : i.id()}) }}"><i class="fas fa-key"></i> {{ i.name() }}</a>
                                        {%  else %}
                                            <a href="{{ path('displaySession', {"session" : i.id()}) }}">{{ i.name() }}</a>
                                        {% endif %}
                                    </u>
                                </td>
                                <td>{{ i.date.format('d-m-Y') }}</td>
                                <td>{{ i.startingTime.format('H:i') }}</td>
                                <td>{{ i.description()|slice(0, 50) }}{% if i.description()|length > 50 %}....{% endif %}</td>
                                <td>{{ i.organizerid.lastname()~" "~i.organizerid.firstname() }}</td>
                                {% if i.closed %}

                                    {% if i.id() in sessionUser %}
                                        <td><a href="#" class="btn btn-danger disabled"><i class="fas fa-times"></i> Se
                                                désinscrire</a></td>
                                    {% else %}
                                        <td><a href="#" class="btn btn-success disabled"><i class="fa fa-check"></i>
                                                S'inscrire</a></td>
                                    {% endif %}

                                {% else %}

                                    {% if i.id() in sessionUser %}
                                        <td><a href="{{ path('RemoveSession', {"idSession" : i.id()}) }}"
                                               class="btn btn-danger"><i class="fas fa-times"></i> Se désinscrire</a>
                                        </td>
                                    {% else %}
                                        <td><a href="{{ path('AddSession', {"idSession" : i.id()}) }}"
                                               class="btn btn-success"><i class="fa fa-check"></i> S'inscrire</a></td>
                                    {% endif %}

                                {% endif %}



                                </tr>
                            {% endfor %}
                            </tbody>
                    </table>

            </div>

        <h5><i class="fas fa-history"></i> Historique</h5>
        <div class="row">
            <table class="table table-hover">
                <thead>
                <tr>
                    <th scope="col">Nom</th>
                    <th scope="col">Date</th>
                    <th scope="col">Heure</th>
                    <th scope="col">Description</th>
                    <th scope="col">Organisateur</th>


                </tr>
                </thead>



                <tbody>
                {% for i in historiqueSession %}
                    {% if i.closed %}
                        <tr class="table-active">
                    {% else %}
                        <tr>
                    {% endif %}
                    <td><u>
                            {% if i.password %}
                                <a href="{{ path('displaySession', {"session" : i.id()}) }}"><i class="fas fa-key"></i> {{ i.name() }}</a>
                            {%  else %}
                                <a href="{{ path('displaySession', {"session" : i.id()}) }}">{{ i.name() }}</a>
                            {% endif %}
                        </u>
                    </td>
                    <td>{{ i.date.format('d-m-Y') }}</td>
                    <td>{{ i.startingTime.format('H:i') }}</td>
                    <td>{{ i.description()|slice(0, 50) }}{% if i.description()|length > 50 %}....{% endif %}</td>
                    <td>{{ i.organizerid.lastname()~" "~i.organizerid.firstname() }}</td>
                   



                    </tr>
                {% endfor %}
                </tbody>
            </table>

        </div>

        </br>



        </div>
        </div>
    </div>
{% endblock %}
