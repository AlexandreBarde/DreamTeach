{% extends 'base.html.twig' %}

{% block title %}
    Séances - DreamTeach
{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="display-4 text-center">Séances</h1>
        <div class="row">
        </div>

        <h5><i class="fas fa-book-reader"></i>&nbsp; Disponibles sur le site</h5>
                <div class="row">
                    <table class="table table-hover">
                        <thead>
                        <tr>
                            <th scope="col">Nom</th>
                            <th scope="col">Date</th>
                            <th scope="col">Heure</th>
                            <th scope="col">Description</th>
                            <th scope="col">Organisateur</th>
                            <th></th>
                            <th></th>

                        </tr>
                        </thead>



                            <tbody>
                            {% for i in session if i.organizerId.id!=app.user.id %}
                                {% if i.closed %}
                                    <tr class="table-active">
                                {% else %}
                                    <tr>
                                {% endif %}
                                <td><u><a href="{{ path('displaySession', {"idSession" : i.id()}) }}">{{ i.name() }}</a></u>
                                </td>
                                <td>{{ i.date.format('d-m-Y') }}</td>
                                <td>{{ i.startingTime.format('H:i') }}</td>
                                <td>{{ i.description()|slice(0, 50) }}{% if i.description()|length > 50 %}....{% endif %}</td>
                                <td>{{ i.organizerid.lastname()~" "~i.organizerid.firstname() }}</td>
                                {% if i.closed %}

                                    {% if i.id() in sessionUser %}
                                        <td><a href="#" class="btn btn-danger disabled"><i class="fas fa-times"></i> Se
                                                désinscrire</a></td>
                                    {% else %}
                                        <td><a href="#" class="btn btn-success disabled"><i class="fa fa-check"></i>
                                                S'inscrire</a></td>
                                    {% endif %}

                                {% else %}

                                    {% if i.id() in sessionUser %}
                                        <td><a href="{{ path('RemoveSession', {"idSession" : i.id()}) }}"
                                               class="btn btn-danger"><i class="fas fa-times"></i> Se désinscrire</a>
                                        </td>
                                    {% else %}
                                        <td><a href="{{ path('AddSession', {"idSession" : i.id()}) }}"
                                               class="btn btn-success"><i class="fa fa-check"></i> S'inscrire</a></td>
                                    {% endif %}

                                {% endif %}



                                </tr>
                            {% endfor %}
                            </tbody>
                    </table>

            </div>

        </br>


                <h5><i class="fas fa-crown"></i> Je suis le créateur</h5>


                <div class="row">
                    <table class="table table-hover">
                        <thead>
                        <tr>
                            <th scope="col">Nom</th>
                            <th scope="col">Date</th>
                            <th scope="col">Heure</th>
                            <th scope="col">Description</th>
                            <th scope="col">Organisateur</th>
                            <th></th>
                            <th></th>
                        </tr>
                        </thead>



                            <tbody>
                            {% for i in session if i.organizerId.id==app.user.id %}
                                {% if i.closed %}
                                    <tr class="table-active">
                                {% else %}
                                    <tr>
                                {% endif %}
                                <td><u><a href="{{ path('displaySession', {"idSession" : i.id()}) }}">{{ i.name() }}</a></u>
                                </td>
                                <td>{{ i.date.format('d-m-Y') }}</td>
                                <td>{{ i.startingTime.format('H:i') }}</td>
                                <td>{{ i.description()|slice(0, 50) }}{% if i.description()|length > 50 %}....{% endif %}</td>
                                <td>{{ i.organizerid.lastname()~" "~i.organizerid.firstname() }}</td>
                                {% if i.closed %}

                                    <td><a href="#" class="btn btn-sm btn-danger disabled"><i
                                                    class="fas fa-door-closed"></i>
                                            Clôturé</td>
                                    <td><a href="#" class="btn btn-sm btn-danger disabled"><i
                                                    class="fas fa-door-closed"></i>
                                            Transfert admin</td>

                                {% else %}
                                    <td><a href="{{ path('CloseSession', {"idSession" : i.id()}) }}"
                                           class="btn btn-sm btn-danger"> <i class="fas fa-door-closed"></i> Clôturer</td>
                                    <td><a href="{{ path('transferRights', {"session" : i.id()}) }}"
                                           class="btn btn-sm btn-danger"><i class="fas fa-door-closed"></i> Transfert admin</td>


                                {% endif %}
                                </tr>
                            {% endfor %}
                            </tbody>
                    </table>

            </div>
        </div>
        </div>
    </div>
{% endblock %}
