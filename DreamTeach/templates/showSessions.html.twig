{% extends 'base.html.twig' %}

{% block title %}
    Dashboard - DreamTeach
{% endblock %}

{% block body %}
<div class="row">
</div>
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h6><i class="far fa-envelope fa-lg"></i>&nbsp; Séances</h6>
            </div>
            <div class="card-body">
                <div class="row">
                    <table class="table table-hover">
                        <thead>
                        <tr>
                            <th scope="col">Nom</th>
                            <th scope="col">Date</th>
                            <th scope="col">Heure</th>
                            <th scope="col">Description</th>
                            <th scope="col"></th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for i in session %}
                            <tr>
                                <td>{{ i.name() }}</td>
                                <td>{{ i.date.format('d-m-Y') }}</td>
                                <td>{{ i.startingTime.format('H:i') }}</td>
                                <td>{{ i.description()|slice(0, 50)}}{% if i.description()|length > 50 %}....{% endif %}</td>
                                {% if i.id() in sessionUser %}
                                    <td><a href="{{ path('RemoveSession', {"idSession" : i.id()}) }}" class="btn btn-danger"><i class="fas fa-times"></i> Se désinscrire</a></td>
                                {% else %}
                                    <td><a href="{{ path('AddSession', {"idSession" : i.id()}) }}" class="btn btn-success"><i class="fa fa-check"></i> S'inscrire</a></td>
                                {% endif %}
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    {% endblock %}



