{% extends 'base.html.twig' %}

{% block title %}
    Dashboard - DreamTeach
{% endblock %}

{% block body %}
    <select name="" id="">
        <option value="hangman">Hangman</option>
        <option value="memory">Memory</option>
    </select>
    <div class="row mt-4">
        <div class="col-8 mx-auto">
            <form action="{{ path('search_xp_view') }}" method="get" id="search_xp_form">
                <div class="form-group">
                    <div class="row">
                        <div class="col-8">
                            <input type="text" id="rechercherInput" class="form-control"
                                   placeholder="Recherchez un étudiant.."
                                   name="search_xp">
                        </div>
                        <div class="col-3">
                            <input type="submit" id="rechercherBtn" value="Rechercher" class="btn"
                                   style="background-color: #6d7fcc; color: white;">
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <table data-toggle="table" class="table table-striped">
                <thead>
                <tr>
                    <th class="text-center" scope="col">
                        Classement
                    </th>
                    <th class="text-center" scope="col">
                        Nom
                    </th>
                    <th class="text-center" scope="col">
                        Prénom
                    </th>
                    <th class="text-center" scope="col">
                        Ville
                    </th>
                    <th class="text-center" scope="col">
                        Ecole
                    </th>
                    <th class="text-center" scope="col">
                        Temps
                    </th>
                </tr>
                </thead>
                <tbody>
                {% if classementMemory is not null %}
                    {% for classement, i in classementMemory %}
                        {% set medaille = "" %}
                        {% if classement == 0 %}
                            {% set medaille = "&#x1F947;" %}
                        {% elseif classement == 1 %}
                            {% set medaille = "&#x1F948;" %}
                        {% elseif classement == 2 %}
                            {% set medaille = "&#x1F949;" %}
                        {% else %}
                            {% set medaille = classement + 1 %}
                        {% endif %}
                        <tr>

                            <td class="text-center"> {{ medaille | raw }} </td>

                            <td class="text-center"> {{ i.studentId.lastName }}</td>

                            <td class="text-center"> {{ i.studentId.firstName }}</td>

                            <td class="text-center">{{ i.studentId.city }}</td>

                            <td class="text-center">  {{ i.studentId.trainingID.schoolID.name }}</td>

                            <td class="text-center">  {{ i.time }} s</td>
                        </tr>
                    {% endfor %}
                {% endif %}
                </tbody>
            </table>
        </div>
    </div>
    {% block javascripts %}
    {% endblock %}
{% endblock %}