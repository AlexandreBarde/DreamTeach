{% extends 'base.html.twig' %}

{% block title %}Modification de profil{% endblock %}

{% block stylesheets %}
{% endblock %}

{% block body %}
    <h1>Modifiez vos informations personnelles</h1>
    {% if(formUser) %}
        <div class="form-group">
            {{ form_start(formUser) }}
                {{ form_row(formUser.firstName) }}
                {{ form_row(formUser.lastName) }}
                {{ form_row(formUser.biography) }}
                {{ form_row(formUser.emailAddress) }}
                {{ form_row(formUser.birthDate) }}
                {{ form_row(formUser.city) }}
                {{ form_row(formUser.trainingID) }}
                {{ form_row(formUser.avatar) }}
            <button type="submit">Modifier le profile</button>
            {{ form_end(formUser) }}
        </div>
    {% endif %}


{% endblock %}


